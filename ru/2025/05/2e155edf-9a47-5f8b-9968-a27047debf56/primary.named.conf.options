acl local { 127.0.0.0/8; };
acl dns-secondary { 192.168.1.3; };

options {
  directory "/var/cache/bind";

  listen-on { any; };
  listen-on-v6 { none; };
  recursion no;

  allow-query { any; };
  allow-query-cache { none; };
  allow-transfer { dns-secondary; }

  auth-nxdomain no;
  dnssec-validation no;
  qname-minimization off;
  version none;
};
